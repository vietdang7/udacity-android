<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vdang.happynewyearcard.MainActivity">

    <!-- Background image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/rooster_1"
        />

    <!-- Greeting text -->
    <TextView
        android:id="@+id/newyeartext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/to"
        android:layout_centerHorizontal="true"
        android:textSize="28sp"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif"
        android:text="@string/new_year_2017" />

    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/eu"
        android:layout_centerHorizontal="true"
        android:textSize="28sp"
        android:textColor="@android:color/white"
        android:text="to"
        />
    <TextView
        android:id="@+id/eu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="28sp"
        android:textColor="@android:color/white"
        android:text="@string/eu_members"
        android:layout_marginBottom="10dp"/>
</RelativeLayout>
